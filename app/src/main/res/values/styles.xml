<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:fontFamily">Avenir</item>-->
        <item name="android:textColor">@color/mouse_text</item>
    </style>
    <style name="TextStyle.Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.ListItem">
        <item name="android:textColor">@color/mouse_text_list</item>
    </style>
    <style name="TextStyle.Small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
